<Window x:Class="PL.FirstPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="FirstPage" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Content="Worker" HorizontalAlignment="Left" Margin="647,10,0,0" VerticalAlignment="Top" Height="40" Width="132" Grid.Row="1" Click="Button_ClickWorker" />
            <Button Content="Customer" HorizontalAlignment="Left" Margin="647,104,0,0" VerticalAlignment="Top" Height="40" Width="132" Grid.Row="1" Click="Button_ClickCustomer"/>
            <Button Content="New Customer" HorizontalAlignment="Left" Margin="647,62,0,0" VerticalAlignment="Top" Height="40" Width="132" Grid.Row="2" Click="Button_ClickNewCustomer"/>
        </Grid>
    </Grid>
</Window>
